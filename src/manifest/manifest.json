{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.13/MicrosoftTeams.schema.json",
  "manifestVersion": "1.13",
  "id": "d98299a9-1b6a-4c03-9c08-d9b679e601b2",
  "version": "1.7.2",
  "packageName": "MS600_TEAMS_MSG_EXT",
  "developer": {
    "name": "Mirko Petrelli",
    "websiteUrl": "https://{{PUBLIC_HOSTNAME}}",
    "privacyUrl": "https://{{PUBLIC_HOSTNAME}}/privacy.html",
    "termsOfUseUrl": "https://{{PUBLIC_HOSTNAME}}/tou.html"
  },
  "name": {
    "short": "MS600 LAB",
    "full": "MS600 Teams Lab: Msg Exts; Personal Tab;"
  },
  "description": {
    "short": "MS600 LAB",
    "full": "A comprehensive solution of Messaging Extensions (Search, Action, Query, Unfurling) and Personal Tab"
  },
  "icons": {
    "outline": "icon-outline.png",
    "color": "icon-color.png"
  },
  "accentColor": "#D85028",
  
  "configurableTabs": [
    {
      "configurationUrl": "https://{{HOSTNAME}}/configMathTab/config.html",
      "canUpdateConfiguration": true,
      "scopes": [ "team" ],
      "sharePointPreviewImage": "https://{{HOSTNAME}}/assets/configMathTab-preview.png",
      "supportedSharePointHosts": [ "sharePointFullPage", "sharePointWebPart" ]
    }
  ],

  "staticTabs": [
    {
      "entityId": "370c8f51-6737-41f7-9986-161bd345589f",
      "name": "MS600TAB_PERSONAL",
      "contentUrl": "https://{{PUBLIC_HOSTNAME}}/MS600TAB_PERSONAL/?name={loginHint}&tenant={tid}&theme={theme}",
      "scopes": [
        "personal"
      ]
    }
  ],
  
  "bots": [],
  "connectors": [],
  "composeExtensions": [
    {
      "botId": "d1c05781-bc0f-493a-b4f6-04214635a4ca",
      "canUpdateConfiguration": false,
      
      "commands": [
        {
          "id": "planetExpanderAction",
          "type": "action",
          "title": "Planet Expander",
          "description": "Lookup the details of a planet.",
          "context": [
            "compose",
            "message"
          ],
          "fetchTask": true
        },
        {
          "id": "planetExpanderSearch",
          "type": "query",
          "title": "Planet Lookup",
          "description": "Search for a planet.",
          "context": [
            "compose"
          ],
          "parameters": [{
            "title": "Planet",
            "name": "searchKeyword",
            "description": "Enter 'inner','outer' or the name of a specific planet"
          }],
          "initialRun": false
        }
      ],

      "messageHandlers": [
        {
          "type": "link",
          "value": {
            "domains": [
              "https://mirkopetrelli.io",
              "mirkopetrelli.io"
            ]
          }
        }
      ]
    }
    
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "{{HOSTNAME}}",
    "https://mirkopetrelli.io",
    "mirkopetrelli.io"
  ],
  "showLoadingIndicator": true
}
