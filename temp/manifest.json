{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.13/MicrosoftTeams.schema.json",
  "manifestVersion": "1.13",

  "id": "1bbee628-2494-4e99-953a-a2f70ead51f8",
  "version": "1.0.0",
  "packageName": "MP_MS600_TEAMS_PACKAGE",

  "developer": {
    "name": "Mirko Petrelli",
    "websiteUrl": "https://1707-95-74-28-149.ngrok.io",
    "privacyUrl": "https://1707-95-74-28-149.ngrok.io/privacy.html",
    "termsOfUseUrl": "https://1707-95-74-28-149.ngrok.io/tou.html"
  },

  "name": {
    "short": "MP TEAMS APPS",
    "full": "MS600 Teams Lab: Msg Exts; Personal Tab;"
  },

  "description": {
    "short": "MP TEAMS APPS",
    "full": "A comprehensive solution of Messaging Extensions (Search, Action, Query, Unfurling) and Personal Tab"
  },

  "icons": {
    "outline": "icon-outline.png",
    "color": "icon-color.png"
  },

  "accentColor": "#30e3d4",
  
  "configurableTabs": [
    {
      "configurationUrl": "https://1707-95-74-28-149.ngrok.io/MS600ConfigTab/config.html",
      "canUpdateConfiguration": true,
      "scopes": [ "team" ],
      "sharePointPreviewImage": "https://1707-95-74-28-149.ngrok.io/assets/MS600ConfigTab-preview.png",
      "supportedSharePointHosts": [ 
        "sharePointFullPage", 
        "sharePointWebPart" 
      ]
    }
  ],

  "staticTabs": [
    {
      "entityId": "c076fc7c-dc02-4923-b9e1-b145e299a116",
      "name": "MS600TAB_PERSONAL",
      "contentUrl": "https://1707-95-74-28-149.ngrok.io/MS600TAB_PERSONAL/?name={loginHint}&tenant={tid}&theme={theme}",
      "scopes": [
        "personal"
      ]
    }
  ],
  
  "bots": [],
  "connectors": [],
  "composeExtensions": [
    {
      "botId": "d1c05781-bc0f-493a-b4f6-04214635a4ca",
      "canUpdateConfiguration": false,
      
      "commands": [
        {
          "id"   : "planetExpanderAction",
          "type" : "action",
          "title": "Planet Expander",
          "description": "Lookup the details of a planet.",
          "context": [
            "compose",
            "message"
          ],
          "fetchTask": true
        },
        {
          "id"   : "planetExpanderSearch",
          "type" : "query",
          "title": "Planet Lookup",
          "description": "Search for a planet.",
          "initialRun" : false,
          "context": [
            "compose"
          ],
          "parameters": [{
            "title": "Planet",
            "name" : "searchKeyword",
            "description": "Enter 'inner','outer' or the name of a specific planet"
          }]
        }
      ],

      "messageHandlers": [
        {
          "type": "link",
          "value": {
            "domains": [
              "https://mirkopetrelli.io",
              "mirkopetrelli.io",
              "*.mirkopetrelli.io"
            ]
          }
        }
      ]
    }
    
  ],

  "permissions": [
    "identity",
    "messageTeamMembers"
  ],

  "validDomains": [
    "1707-95-74-28-149.ngrok.io",
    "https://mirkopetrelli.io",
    "mirkopetrelli.io",
    "*.mirkopetrelli.io"
  ],
  
  "showLoadingIndicator": true
}
